        <ImageView android:id="@+id/obstacle_9_1" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1" android:visibility="invisible" android:src="@drawable/meteor"/>
        <ImageView android:id="@+id/obstacle_9_2" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1" android:visibility="invisible" android:src="@drawable/meteor"/>

