        android:layout_above="@id/player_lane_1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:rowCount="14"
        android:columnCount="3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

